<h1>Login</h1>

<!-- lines 8:10 resend the email again so the user doesn't have to type it again if the password is wrong-->
<form action="/auth/login" method="POST">
    <label>
        Email: 
<!--   <input name="email" type ='email' required
        value= "<% if (typeof errorMessage !== 'undefined') { %> 
        <%= payload.email %>
        <% } %>"/>
        -->
        <!-- this is the same as 8:10 but using ternearies-->
        <input name="email" type ='email' required
        value= "<%= typeof errorMessage !== 'undefined' ? payload.email : '' %>" />

    </label>

    <label>
        Password: 
        <input name="password" type ='password' required>
    </label>
    <button type="submit">Submit</button>
</form>

<% if (typeof errorMessage !== 'undefined') { %>
    <p style="color: red"><%= errorMessage  %> </p>
<% } %>